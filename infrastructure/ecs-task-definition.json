{
  "family": "computer-use-agent",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "2048",
  "memory": "4096",
  "executionRoleArn": "arn:aws:iam::061051242847:role/computer-use-trial-execution-role",
  "taskRoleArn": "arn:aws:iam::061051242847:role/computer-use-trial-task-role",
  "containerDefinitions": [
    {
      "name": "computer",
      "image": "061051242847.dkr.ecr.us-west-2.amazonaws.com/computer-use-container:latest",
      "essential": true,
      "portMappings": [
        {"containerPort": 8080, "protocol": "tcp"},
        {"containerPort": 5900, "protocol": "tcp"}
      ],
      "environment": [
        {"name": "DISPLAY_WIDTH", "value": "1920"},
        {"name": "DISPLAY_HEIGHT", "value": "1080"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/computer-use-trial",
          "awslogs-region": "us-west-2",
          "awslogs-stream-prefix": "computer"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8080/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    },
    {
      "name": "orchestrator",
      "image": "061051242847.dkr.ecr.us-west-2.amazonaws.com/computer-use-orchestrator:latest",
      "essential": true,
      "portMappings": [
        {"containerPort": 8000, "protocol": "tcp"}
      ],
      "environment": [
        {"name": "CLAUDE_MODEL", "value": "claude-sonnet-4-20250514"},
        {"name": "USE_LOCAL_CONTAINER", "value": "true"},
        {"name": "LOCAL_CONTAINER_URL", "value": "http://localhost:8080"}
      ],
      "secrets": [
        {
          "name": "ANTHROPIC_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-west-2:061051242847:secret:computer-use-agent/anthropic-api-key-RgruQ2"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/computer-use-trial",
          "awslogs-region": "us-west-2",
          "awslogs-stream-prefix": "orchestrator"
        }
      },
      "dependsOn": [
        {"containerName": "computer", "condition": "HEALTHY"}
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 30
      }
    }
  ]
}
